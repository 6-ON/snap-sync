{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"module": "commonjs",
		"target": "es5",

		"noImplicitAny": false,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"sourceMap": true,
		"outDir": "./dist"
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"],
		"files": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
