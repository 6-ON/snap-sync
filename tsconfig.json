{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": false,
		"skipLibCheck": true,
		"baseUrl": "./",
		"sourceMap": false,
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
